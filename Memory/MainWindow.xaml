<Window x:Class="MemoryGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock x:Name="MovesTextBlock" FontSize="20" Margin="0,0,20,0"/>
            <TextBlock x:Name="TimeTextBlock" FontSize="20"/>
        </StackPanel>

        <UniformGrid x:Name="GameGrid" Rows="4" Columns="3" Grid.Row="1"/>
    </Grid>
</Window>
